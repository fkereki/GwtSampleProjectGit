<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='gwtsampleproject'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <inherits name='com.googlecode.gwtphonegap.PhoneGap' />

  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.kereki.gwtsampleproject.client.GwtSampleProject'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

  <!-- We'll use gecko1_8 (Firefox) for local testing, and Safari for Phonegap -->
  <!-- For minimum size in the final app, only Safari should be specified -->
  <set-property name="user.agent" value="gecko1_8,safari"/>
</module>
